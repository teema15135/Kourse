<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/kourseCoverImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/home_cover" />

            <TextView
                android:id="@+id/kourseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:alpha="0.6"
                android:fontFamily="@font/lobster"
                android:text="Kourse"
                android:textColor="#ffff"
                android:textSize="45sp" />

            <LinearLayout
                android:id="@+id/homeSelectUserLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/kourseCoverImage"
                android:orientation="horizontal"
                android:gravity="center" >

                <Button
                    android:id="@+id/userLeftButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left"/>

                <Button
                    android:id="@+id/userRightButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right"/>

            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fragment_sweep_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_add"
        app:borderWidth="0dp"
        app:rippleColor="@color/red_pastel" />


</RelativeLayout>